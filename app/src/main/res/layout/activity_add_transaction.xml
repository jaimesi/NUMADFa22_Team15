<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.peakActivities.addTransaction.AddTransactionActivity">

    <GridLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:paddingBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="8">

        <ImageButton
            android:id="@+id/btn_dining"
            android:layout_width="83dp"
            android:layout_height="51dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="50dp"
            android:background="@drawable/round_corner"
            android:contentDescription="Dining Button"
            android:onClick="addTransactionCategoryDining"
            android:radius="10dp"
            android:src="@drawable/ic_dining"
            tools:ignore="RedundantDescriptionCheck,ImageContrastCheck" />

        <ImageButton
            android:id="@+id/btn_groceries"
            android:layout_width="83dp"
            android:layout_height="51dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="50dp"
            android:background="@drawable/round_corner"
            android:contentDescription="Groceries Button"
            android:onClick="addTransactionCategoryGroceries"
            android:radius="10dp"
            android:src="@drawable/ic_groceries"
            tools:ignore="RedundantDescriptionCheck,ImageContrastCheck" />

        <ImageButton
            android:id="@+id/btn_shopping"
            android:layout_width="83dp"
            android:layout_height="51dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_corner"
            android:contentDescription="Shopping Button"
            android:onClick="addTransactionCategoryShopping"
            android:radius="10dp"
            android:src="@drawable/ic_shopping"
            tools:ignore="RedundantDescriptionCheck,ImageContrastCheck" />

        <TextView
            android:layout_gravity="center"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp"
            android:text="Dining" />

        <TextView
            android:text="Groceries"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Shopping"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp" />

        <ImageButton
            android:id="@+id/btn_living"
            android:layout_width="83dp"
            android:layout_height="51dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="50dp"
            android:background="@drawable/round_corner"
            android:contentDescription="Living Button"
            android:onClick="addTransactionCategoryLiving"
            android:radius="10dp"
            android:src="@drawable/ic_living"
            tools:ignore="ImageContrastCheck,RedundantDescriptionCheck" />

        <ImageButton
            android:id="@+id/btn_entertainment"
            android:layout_width="83dp"
            android:layout_height="51dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="50dp"
            android:background="@drawable/round_corner"
            android:contentDescription="Entertainment Button"
            android:onClick="addTransactionCategoryEntertainment"
            android:radius="10dp"
            android:src="@drawable/ic_entertainment"
            tools:ignore="ImageContrastCheck,RedundantDescriptionCheck" />

        <ImageButton
            android:id="@+id/btn_education"
            android:layout_width="83dp"
            android:layout_height="51dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_corner"
            android:contentDescription="Education Button"
            android:onClick="addTransactionCategoryEducation"
            android:radius="10dp"
            android:src="@drawable/ic_education"
            tools:ignore="ImageContrastCheck,RedundantDescriptionCheck" />

        <TextView
            android:text="Living"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:text="Entertainment"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:text="Education"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp" />

        <ImageButton
            android:id="@+id/btn_beauty"
            android:layout_width="83dp"
            android:layout_height="51dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="50dp"
            android:background="@drawable/round_corner"
            android:contentDescription="Beauty Button"
            android:onClick="addTransactionCategoryBeauty"
            android:radius="10dp"
            android:src="@drawable/ic_beauty"
            tools:ignore="RedundantDescriptionCheck,ImageContrastCheck" />

        <ImageButton
            android:id="@+id/btn_transportation"
            android:layout_width="83dp"
            android:layout_height="51dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="50dp"
            android:background="@drawable/round_corner"
            android:contentDescription="Transportation Button"
            android:onClick="addTransactionCategoryTransportation"
            android:radius="10dp"
            android:src="@drawable/ic_transportation"
            tools:ignore="RedundantDescriptionCheck,ImageContrastCheck" />

        <ImageButton
            android:id="@+id/btn_health"
            android:layout_width="83dp"
            android:layout_height="51dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_corner"
            android:contentDescription="Health Button"
            android:onClick="addTransactionCategoryHealth"
            android:radius="10dp"
            android:src="@drawable/ic_health"
            tools:ignore="ImageContrastCheck,RedundantDescriptionCheck" />

        <TextView
            android:text="Beauty"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:text="Transportation"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:text="Health"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp" />

        <ImageButton
            android:id="@+id/btn_travel"
            android:layout_width="83dp"
            android:layout_height="51dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="50dp"
            android:background="@drawable/round_corner"
            android:contentDescription="Travel Button"
            android:onClick="addTransactionCategoryTravel"
            android:radius="10dp"
            android:src="@drawable/ic_travel"
            tools:ignore="RedundantDescriptionCheck,ImageContrastCheck" />

        <ImageButton
            android:id="@+id/btn_pet"
            android:layout_width="83dp"
            android:layout_height="51dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="50dp"
            android:background="@drawable/round_corner"
            android:contentDescription="Pet Button"
            android:onClick="addTransactionCategoryPet"
            android:radius="10dp"
            android:src="@drawable/ic_pet"
            tools:ignore="ImageContrastCheck,RedundantDescriptionCheck" />

        <ImageButton
            android:id="@+id/btn_other"
            android:layout_width="83dp"
            android:layout_height="51dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_corner"
            android:contentDescription="Other Button"
            android:onClick="addTransactionCategoryOther"
            android:radius="10dp"
            android:src="@drawable/ic_other"
            tools:ignore="ImageContrastCheck,RedundantDescriptionCheck" />

        <TextView
            android:text="Travel"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:text="Pet"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:text="Other"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp" />

    </GridLayout>

</ScrollView>