<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.peakActivities.onBoarding.onBoardingAnimation">

    <TextView
        android:id="@+id/welcome_splash_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="PEAK"
        android:textColor="@color/FinalProj_Secondary"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13999999" />

    <TextView
        android:id="@+id/welcome_splash_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Building better spending habits"
        android:textColor="@color/FinalProj_Dark"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/welcome_splash_header"
        app:layout_constraintStart_toStartOf="@id/welcome_splash_header"
        app:layout_constraintEnd_toEndOf="@id/welcome_splash_header"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_animation_piggy"
        android:layout_width="400dp"
        android:layout_height="400dp"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/piggy_bank_animation_2"
        app:layout_constraintTop_toBottomOf="@id/welcome_splash_slogan"
        app:layout_constraintStart_toStartOf="@id/welcome_splash_header"
        app:layout_constraintEnd_toEndOf="@id/welcome_splash_header">
    </com.airbnb.lottie.LottieAnimationView>

</androidx.constraintlayout.widget.ConstraintLayout>