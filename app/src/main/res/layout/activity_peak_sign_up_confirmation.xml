<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.peakActivities.userRegister.PeakSignUpConfirmation">

    <ImageView
        android:id="@+id/peak_logo_large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_peak_logo_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_thank_you_sign_up"
        android:layout_marginTop="100dp"/>

    <!-- Create Your Budget Button -->
    <TextView
        android:id="@+id/tv_thank_you_sign_up"
        style="@style/signup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/thank_you_for_signing_up"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/btn_peak_create_budget"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/peak_logo_large" />

    <Button
        android:id="@+id/btn_peak_create_budget"
        android:layout_width="327dp"
        android:layout_height="68dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/FinalProj_Dark"
        android:clickable="true"
        android:onClick="openHomePage"
        android:text="Create Your First Budget!"
        android:textAppearance="@style/button_dark"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_thank_you_sign_up" />
</androidx.constraintlayout.widget.ConstraintLayout>