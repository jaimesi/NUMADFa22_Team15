<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.peakActivities.profilePage.TestBudgetActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/budget_textinput_layout"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/budget_textinput_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Budget" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button_test_addbudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:text="add"
        android:onClick="addBudget"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/budget_textinput_layout" />

    <Button
        android:id="@+id/button_test_updatebudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="update"
        android:onClick="updateBudget"
        app:layout_constraintEnd_toEndOf="@+id/button_test_addbudget"
        app:layout_constraintTop_toBottomOf="@+id/button_test_addbudget" />
</androidx.constraintlayout.widget.ConstraintLayout>