<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet_add_transaction">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <Spinner
            android:id="@+id/spinner_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="Category Spinner"
            android:gravity="center"
            android:minHeight="48dp"
            android:spinnerMode="dropdown"
            android:textColor="@color/FinalProj_Dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_amount_quick_add"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:gravity="center"
                android:text="Amount: "
                android:textStyle="bold"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_transaction_amount_quick_add"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="40dp"
                android:layout_toRightOf="@id/tv_amount_quick_add"
                android:hint="Transaction Amount"
                android:inputType="numberDecimal"
                tools:ignore="TextContrastCheck" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_description_quick_add"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:gravity="center"
                android:text="Description: "
                android:textStyle="bold"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_description_quick_add"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="15dp"
                android:layout_toRightOf="@id/tv_description_quick_add"
                android:hint="Add a description"
                android:inputType="textShortMessage"
                tools:ignore="TextContrastCheck" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btn_done_add_transaction_quick_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:backgroundTint="@color/FinalProj_Primary"
                android:drawableLeft="@drawable/ic_done_add"
                android:padding="8dp"
                android:text="Done"
                android:textColor="@color/FinalProj_Dark" />

        </RelativeLayout>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>